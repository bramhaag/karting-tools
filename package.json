{
    "private": true,
    "name": "karting-tools",
    "version": "0.0.0",
    "license": "MIT",
    "scripts": {
        "build": "preact build",
        "build:gh": "GITHUB_PAGES=karting-tools preact build --no-prerender && dot-json ./build/manifest.json start-url \"/REPO_NAME/\"",
        "serve": "sirv build --port 8080 --cors --single",
        "dev": "preact watch",
        "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
        "test": "jest ./tests"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{css,md,scss}": "prettier --write",
        "*.{js,jsx,ts,tsx}": "eslint --fix"
    },
    "eslintIgnore": [
        "build/*"
    ],
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.32",
        "@fortawesome/free-solid-svg-icons": "^5.15.1",
        "@fortawesome/react-fontawesome": "^0.1.12",
        "@types/classnames": "^2.2.11",
        "@types/history": "^4.7.8",
        "@types/react-fontawesome": "^1.6.4",
        "@types/youtube-player": "^5.5.3",
        "classnames": "^2.2.6",
        "history": "4.0.0",
        "preact": "^10.5.7",
        "preact-bulma": "^1.2.0-next.1",
        "preact-compat": "^3.19.0",
        "preact-jsx-chai": "^3.0.0",
        "preact-markup": "^2.0.0",
        "preact-render-to-string": "^5.1.4",
        "preact-router": "^3.2.1",
        "react-youtube": "^7.13.0"
    },
    "devDependencies": {
        "@teamsupercell/typings-for-css-modules-loader": "^2.2.0",
        "@types/enzyme": "^3.10.5",
        "@types/jest": "^26.0.8",
        "@types/webpack-env": "^1.15.1",
        "@typescript-eslint/eslint-plugin": "^2.25.0",
        "@typescript-eslint/parser": "^2.25.0",
        "css-loader": "^3.5.3",
        "dot-json": "^1.2.1",
        "enzyme": "^3.11.0",
        "enzyme-adapter-preact-pure": "^2.2.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.19.0",
        "eslint-plugin-react-hooks": "^3.0.0",
        "husky": "^4.2.1",
        "jest": "^26.2.2",
        "jest-preset-preact": "^4.0.2",
        "lint-staged": "^10.0.7",
        "preact-cli": "^3.0.0",
        "prettier": "^1.19.1",
        "sirv-cli": "^1.0.0-next.3",
        "typescript": "^3.7.5"
    }
}
